<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Message #<%= @message.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @message.name %></dd>

              <dt>Creator</dt>
              <dd><%= @message.creator %></dd>

              <dt>Recipient</dt>
              <dd><%= @message.recipient %></dd>

              <dt>Message content</dt>
              <dd><%= @message.message_content %></dd>

              <dt>Classification</dt>
              <dd><%= @message.classification %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/messages" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
