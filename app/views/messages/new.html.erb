<!-- Validation failure messages -->

<% if @message.errors.any? %>
  <% @message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Message</h3>
      </div>
      <div class="panel-body">
        <form action="/create_message" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @message.name %>">
            </div>
          </div>

          <!-- Label and input for creator -->
          <div class="form-group">
            <label for="creator" class="col-sm-2 control-label">
              Creator
            </label>
            <div class="col-sm-10">
              <input type="text" id="creator" name="creator" placeholder="Creator" class="form-control" value="<%= @message.creator %>">
            </div>
          </div>

          <!-- Label and input for recipient -->
          <div class="form-group">
            <label for="recipient" class="col-sm-2 control-label">
              Recipient
            </label>
            <div class="col-sm-10">
              <input type="text" id="recipient" name="recipient" placeholder="Recipient" class="form-control" value="<%= @message.recipient %>">
            </div>
          </div>

          <!-- Label and input for message_content -->
          <div class="form-group">
            <label for="message_content" class="col-sm-2 control-label">
              Message content
            </label>
            <div class="col-sm-10">
              <textarea id="message_content" name="message_content" placeholder="Message content" class="form-control" rows="3"><%= @message.message_content %></textarea>
            </div>
          </div>

          <!-- Label and input for classification -->
          <div class="form-group">
            <label for="classification" class="col-sm-2 control-label">
              Classification
            </label>
            <div class="col-sm-10">
              <input type="text" id="classification" name="classification" placeholder="Classification" class="form-control" value="<%= @message.classification %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Message
              </button>
              or
              <a href="/messages">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
