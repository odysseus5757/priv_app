<!-- Validation failure messages -->

<% if @message.errors.any? %>
  <% @message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Message</h3>
      </div>
      <div class="panel-body">
        <form action="/create_message" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for creator_id -->
          <div class="form-group">
            <label for="creator_id" class="col-sm-2 control-label">
              Creator
            </label>
            <div class="col-sm-10">
              <input type="text" id="creator_id" name="creator_id" placeholder="Creator" class="form-control" value="<%= @message.creator_id %>">
            </div>
          </div>

          <!-- Label and input for matter_id -->
          <div class="form-group">
            <label for="matter_id" class="col-sm-2 control-label">
              Matter
            </label>
            <div class="col-sm-10">
              <input type="text" id="matter_id" name="matter_id" placeholder="Matter" class="form-control" value="<%= @message.matter_id %>">
            </div>
          </div>

          <!-- Label and input for recipient_id -->
          <div class="form-group">
            <label for="recipient_id" class="col-sm-2 control-label">
              Recipient
            </label>
            <div class="col-sm-10">
              <input type="text" id="recipient_id" name="recipient_id" placeholder="Recipient" class="form-control" value="<%= @message.recipient_id %>">
            </div>
          </div>

          <!-- Label and input for classification -->
          <div class="form-group">
            <label for="classification" class="col-sm-2 control-label">
              Classification
            </label>
            <div class="col-sm-10">
              <input type="text" id="classification" name="classification" placeholder="Classification" class="form-control" value="<%= @message.classification %>">
            </div>
          </div>

          <!-- Label and input for content -->
          <div class="form-group">
            <label for="content" class="col-sm-2 control-label">
              Content
            </label>
            <div class="col-sm-10">
              <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @message.content %></textarea>
            </div>
          </div>

          <!-- Label and input for organization -->
          <div class="form-group">
            <label for="organization" class="col-sm-2 control-label">
              Organization
            </label>
            <div class="col-sm-10">
              <input type="text" id="organization" name="organization" placeholder="Organization" class="form-control" value="<%= @message.organization %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Message
              </button>
              or
              <a href="/messages">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
